//-include ../../mixins/pug/svg-icon
block variables
    -
        var baseDir = './';

doctype html
html(lang="ru")
    //- Include head
    include ./head

    body(class=pageClass)
        .wrapper

            .wrapper__content
                //- Include header
                include ../components/header/header

                if (pageClass !== 'homepage')
                    nav.breadcrumbs.mb-sm-30
                        .container
                            ul.breadcrumbs__list
                                li
                                    a(href="/") Главная
                                    span.breadcrumbs__divider /

                                li.is-active #{title}

                block top-position

                .container
                    .row
                        block columns

                block bottom-position



        a.go-top.go-top--js(href='#')


        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src=`${baseDir}js/bandle.min.js`)

        block script
